<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="421.0" prefWidth="339.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Que2Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label fx:id="score" />
      <Label fx:id="question" alignment="CENTER" maxHeight="1.7976931348623157E308" />
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <RadioButton fx:id="r1" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#onGuess" text="RadioButton" />
            <RadioButton fx:id="r2" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#onGuess" text="RadioButton" />
            <RadioButton fx:id="r3" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#onGuess" text="RadioButton" />
            <RadioButton fx:id="r4" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#onGuess" text="RadioButton" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="100.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <Button fx:id="OK" alignment="CENTER" mnemonicParsing="false" onAction="#OKPressed" text="OK" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="newgame" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#newGame" text="New Game">
               <HBox.margin>
                  <Insets left="145.0" right="10.0" />
               </HBox.margin></Button>
            <Button fx:id="quit" mnemonicParsing="false" onAction="#quitGame" text="Quit">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="stop" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#endGame" text="Stop Game">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></Button>
         </children>
      </HBox>
   </children>
</VBox>
